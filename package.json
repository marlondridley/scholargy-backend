{
  "name": "scholargy-mvp-azure",
  "version": "1.0.0",
  "description": "Scholargy MVP with Azure integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "node startup.js",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/scholargyMVPAzure.git"
  },
  "keywords": [
    "scholarship",
    "college",
    "education",
    "azure",
    "ai"
  ],
  "author": "Scholargy Team",
  "license": "MIT"
}
