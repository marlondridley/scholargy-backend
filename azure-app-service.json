{
  "name": "scholargy-mvp-azure",
  "type": "web",
  "runtime": "node",
  "version": "22-lts",
  "os": "linux",
  "region": "East US",
  "sku": "B1",
  "configuration": {
    "nodeVersion": "22.17.1",
    "startupCommand": "npm start",
    "environmentVariables": {
      "NODE_ENV": "production",
      "PORT": "8080",
      "WEBSITE_NODE_DEFAULT_VERSION": "22.17.1"
    }
  },
  "deployment": {
    "source": "github",
    "branch": "main"
  },
  "appSettings": {
    "description": "These environment variables should be configured in Azure App Service Configuration",
    "required": [
      "SUPABASE_URL",
      "SUPABASE_SERVICE_ROLE_KEY",
      "COSMOS_DB_CONNECTION_STRING",
      "DB_NAME",
      "AZURE_OPENAI_ENDPOINT",
      "AZURE_OPENAI_API_KEY",
      "AZURE_OPENAI_DEPLOYMENT_NAME",
      "AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME",
      "REACT_APP_SUPABASE_URL",
      "REACT_APP_SUPABASE_ANON_KEY"
    ],
    "optional": [
      "AZURE_REDIS_CONNECTION_STRING"
    ]
  }
} 